<html>

<head>
    <title>
        <%= title %>
    </title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css">
    <link rel="stylesheet" href="/css/home.css">
    
    <script src="/js/home.js" defer></script>

</head>

<body>

    <div id="container">
        <div id="top-section">
            <i class="fas fa-address-book" id="title-icon"></i> &nbsp;
            <h1 id="heading">My Contacts</h1>
        </div>
        <div id="list-container">
            <ul id="list" style="list-style: none;">
                <% for(let i of contacts){%>
                    <li class="contact">
                        <div class="details">
                            <span id="c-name"><%= i.name %></span>
                            <span id="c-phone"><%= i.phone %></span>
                        </div>
                        <div class="delete-button">
                            <a href="/delete-contact/?phone=<%= i.phone %>" id="delete-link">
                                <i class="fas fa-window-close">&nbsp;&nbsp;</i>
                            </a>
                        </div>
                    </li>

                    <%} %>
            </ul>
        </div>
        <div id="form-container">
            <form action="/create-contact" method="post">
                <input class="form-input" type="text" name="name" placeholder="Enter Name" required><br>
                <input class="form-input" type="number" name="phone" placeholder="Enter Phone Number" required><br>
                <button class="btn" type="submit">Create this Contact</button>

            </form>
        </div>
    </div>

</body>

</html>